.row
  .col-md-12
    .page-header
      .pull-right
        - #if @user.users.where(id: current_user).count > 0
        .btn-group
          = link_to(unit_adults_path(@unit), class: 'btn btn-default') do
            %i.fa.fa-reply
            #{@unit.name_unit} adults

          - if policy(@user).edit?
            = link_to(edit_unit_adult_path(@unit, @user), class: 'btn btn-default') do
              %i.fa.fa-edit
              edit #{@user.first_name}

          %a.btn.dropdown-toggle.btn-warning{href: '#', data: {toggle: 'dropdown'}}
            %i.fa.fa-gear
            actions
            %span.caret
          %ul.dropdown-menu.pull-right
            - if policy(@user).destroy?
              %li
                = link_to(unit_adult_path(@unit, @user), method: :delete, data: {confirm: 'Are you sure?'}, class: "") do
                  %i.fa.fa-trash-o
                  destroy #{@user.first_name}

            - if policy(@user).new?
              %li
                = link_to(new_unit_adult_path(@unit), class: "") do
                  %i.fa.fa-plus
                  new adult

            - if policy(@user).send_welcome_reset_password?
              %li
                = link_to 'Send welcome email', '#', data: { toggle: 'modal', target: '#send-welcome-email'}

      %h2 Adult: #{@user.full_name}

    = render partial: 'layouts/flash', locals: {flash: flash, ar_object: @user}

= cache ["unit-#{@unit.id}", @user] do
  .row
    .col-md-8
      .text-xlarge
        %table.table
          %tr
            %td
              / %strong= @user.sub_unit.unit.unit_type_title
              %strong Unit
            %td
              = @unit.name

          %tr
            %td
              %strong Position
            %td
              = all_leadership_positions(@unit, @user)

          %tr
            %td
              %strong Email
            %td
              = mail_to @user.email

          %tr
            %td
              %strong Phones
            %td
              - @user.phones.each do |phone|
                #{phone.kind}:
                = link_to (number_to_phone phone.number), "tel:1-#{number_to_phone phone.number}"
                %br

          %tr
            %td
              %strong Address
            %td
              %address= user_address_show(@user)

          %tr
            %td
              %strong= @unit.sub_unit_name.pluralize
            %td
              = @user.sub_units(@unit).map(&:name).join(', ')

          %tr
            %td
              %strong Scouts
            %td
              = adult_scouts_link_list(@unit, @user)

          %tr
            %td
              %strong MB Counselor
            %td
              - @user.merit_badges.unit(@unit.id).by_name.each do |merit_badge|
                = link_to merit_badge.name, [@unit, merit_badge]
                %br

    .col-md-3.col-md-offset-1
      .panel.panel-default
        .panel-body.centered
          = image_tag @user.picture.url, class: 'circle-picture'

= render layout: 'users/send_welcome_email_modal' do
  = link_to "Send welcome email", send_welcome_reset_password_unit_adult_path(@unit, @user), class: 'btn btn-primary'
