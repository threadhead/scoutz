.col-lg-6.col-lg-offset-3
  .modal-fade
    .modal-dialog
      .modal-content
        .modal-header
          %h2 Forgot your password?

        .modal-body
          = render partial: 'layouts/flash', locals: {flash: flash}

          .row
            .col-md-8.col-md-offset-2
              = bootstrap_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post } do |f|
                %br
                = f.email_field :email, autofocus: true, placeholder: 'email', hide_label: true, class: 'input-lg'

                %br
                = f.submit "Send me reset password instructions", class: 'btn btn-primary btn-block btn-lg'
                %br

              - if devise_mapping.registerable? && controller_name != 'registrations' && false
                %p.centered
                  Don't have an account?
                  = link_to "Sign up", new_registration_path(resource_name)

        .modal-footer
          = render partial: "devise/shared/links"

