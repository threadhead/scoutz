.modal-fade
  .modal-dialog
    .modal-content

      .modal-header
        %h2 Sign up

      .modal-body
        = render partial: 'layouts/flash', locals: {flash: flash, ar_object: resource}
        %h3 Scoutlander.com user? You can import your entire unit, automagically! Just signup and we'll take care of the rest.
        %p &nbsp;

        = form_for resource, as: resource_name, url: registration_path(resource_name) do |f|

          = #devise_error_messages!

          .row
            .col-md-offset-2.col-md-8
              .form-group
                .row
                  .col-md-6
                    = f.label :first_name, 'first name', class: 'control-label sr-only'
                    = f.email_field :first_name, class: 'form-control', placeholder: 'first name'
                  .col-md-6
                    = f.label :last_name, 'last name', class: 'control-label sr-only'
                    = f.email_field :last_name, class: 'form-control', placeholder: 'last name'

              .form-group
                = f.label :email, 'email', class: 'control-label sr-only'
                = f.email_field :email, class: 'form-control', placeholder: 'email address'

              .form-group
                = f.label :password, 'password', class: 'control-label sr-only'
                = f.password_field :password, class: 'form-control', placeholder: 'password'

              .form-group
                = f.label :password_confirmation, 'confirm password', class: 'control-label sr-only'
                = f.password_field :password_confirmation, class: 'form-control', placeholder: 're-enter password'

              .form-group
                = f.submit 'Sign up', class: 'btn btn-primary'

      .modal-footer
        = render 'devise/shared/links'
