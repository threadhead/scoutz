= render partial: 'layouts/flash', locals: {flash: flash, ar_object: @event_signup}


.panel.panel-default
  .panel-heading
    %h3
      Event:
      = link_to @event.name, unit_event_path(@event.unit, @event)
    %h4 Change signup for #{@event_signup.user.f_name_l_initial}

  .panel-body
    %p.xxlarge
    = form_for ([@event, :email, @event_signup]), html: { class: 'form-horizontal' } do |f|
      = render partial: 'form', locals: {f: f}
