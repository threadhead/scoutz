= form_for event_signup, html: {}, remote: true do |f|
  = f.hidden_field :scout_id
  = f.hidden_field :event_id

  %table.table.table-condensed.table-borderless
    %tr
      %th.centered= f.label :scouts_attending, 'Scouts'
      %th.centered= f.label :siblings_attending, 'Siblings'
      %th.centered= f.label :adults_attending, 'Adults'
    %tr
      %td
        .col-md-10.col-md-offset-1
          = f.select :scouts_attending, [0,1], {}, {class: 'form-control'}
      %td
        .col-md-10.col-md-offset-1
          = f.select :siblings_attending, [0,1,2,3,4,5,6], {}, {class: 'form-control'}
      %td
        .col-md-10.col-md-offset-1
          = f.select :adults_attending, [0,1,2,3,4,5,6], {}, {class: 'form-control'}

  = f.text_area :comment, placeholder: 'comments', rows: 3, style: "width: 100%;"

  %fieldset.fieldset-sm
    %legend Carpool
    .form-horizontal
      .form-group
        = f.label :need_carpool_seats, 'Need Ride', class: @label_col_class
        .col-md-4
          = f.select :need_carpool_seats, EventSignup.need_carpool_select_options, {}, {class: 'form-control'}
        .col-md-2
          %span.fa-stack{data: {toggle: 'tooltip', container: 'body'}, title: 'Select the number of seats you need.'}
            %i.fa.fa-circle.fa-stack-2x.tooltip_circle.fa-sm
            %i.fa.fa-question.fa-stack-1x.fa-inverse

      .form-group
        = f.label :has_carpool_seats, 'Can Drive', class: @label_col_class
        .col-md-6
          = f.select :has_carpool_seats, EventSignup.has_carpool_select_options, {}, {class: 'form-control'}
        .col-md-2
          %span.fa-stack{data: {toggle: 'tooltip', container: 'body'}, title: 'Select the number of seats you can take in vehicle. Select  0 if you are driving but can\'t carpool.'}
            %i.fa.fa-circle.fa-stack-2x.tooltip_circle.fa-sm
            %i.fa.fa-question.fa-stack-1x.fa-inverse

  %fieldset.fieldset-sm
    %legend Activity Consent Form
    .checkbox
      = f.label :permision_check_box do
        = f.check_box :permission_check_box, value: event_signup.has_activity_consent_form?
        ACF Received
        - unless event_signup.permission_at.nil?
          on: #{event_signup.permission_at.to_s(:short_ampm)}


  %br
  .right-aligned
    - if close_button
      = link_to 'Close', '#', class: 'btn btn-default btn-sm', data: { dismiss: 'modal' }
    - unless event_signup.new_record?
      = link_to "Cancel reservation", event_signup, method: :delete, remote: true, confirm: 'Are you sure you want to cancel your sign up?', class: 'btn btn-warning btn-sm'
    = f.submit signup_submit(event_signup), class: 'btn btn-primary btn-sm'
