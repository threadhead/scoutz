.navbar.navbar-fixed-top.navbar-inverse#navbar-fixed-upper
  .container-fluid
    .navbar-header
      %button.navbar-toggle(type="button" data-toggle="collapse" data-target="#scoutz-navbar-collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand(href="/") Scout.in

    .collapse.navbar-collapse#scoutz-navbar-collapse
      %ul.nav.navbar-nav.pull-right
        - if current_user
          %li
            = link_to '#', data: {toggle: "dropdown"}, class: 'dropdown-toggle' do
              = image_tag user_picture_url(current_user), class: 'img-circle user-picture'
              %span.user-info
                %small Welcome,
                = current_user.first_name
              %i.fa.fa-caret-down.user-caret

            %ul.dropdown-menu
              %li
                = link_to '#' do
                  %i.fa.fa-user
                  Profile
              %li
                = link_to '#' do
                  %i.fa.fa-key
                  Change Password
              %li.divider
              %li
                = link_to destroy_user_session_path, method: :delete do
                  %i.fa.fa-power-off
                  Sign out

        - else
          %li= link_to 'Sign in', new_user_session_path

.navbar.navbar-default#navbar-fixed-lower
  .container-fluid
    .navbar-header
      %button.navbar-toggle(type="button" data-toggle="collapse" data-target="#unit-navbar-collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to @unit.name_unit, '/', class: 'navbar-brand'

    .navbar-collapse.collapse#unit-navbar-collapse
      %ul.nav.navbar-nav
        %li
          = link_to unit_scouts_path(@unit) do
            %i.fa.fa-user{style: "color: #c00;"}
            Scouts

        %li
          = link_to unit_adults_path(@unit) do
            %i.fa.fa-user{style: "color: #c0c000;"}
            Adults

        - if @unit.unit_type == "Boy Scouts"
          %li
            = link_to unit_merit_badges_path(@unit) do
              %i.fa.fa-graduation-cap
              MB Counselors

        - if policy(EmailMessage).create?
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', data: {hover: 'dropdown'} do
              %i.fa.fa-envelope
              Email Blast
              %i.fa.fa-caret-down

            %ul.dropdown-menu
              %li
                = link_to unit_email_messages_path(@unit) do
                  My Sent Email
              %li
                = link_to new_unit_email_message_path(@unit) do
                  %i.fa.fa-plus
                  New


        - if policy(SmsMessage).create?
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', data: {hover: 'dropdown'} do
              %i.fa.fa-phone
              SMS Blast
              %i.fa.fa-caret-down

            %ul.dropdown-menu
              %li
                = link_to unit_sms_messages_path(@unit) do
                  My Sent SMS
              %li
                = link_to new_unit_sms_message_path(@unit) do
                  %i.fa.fa-plus
                  New


        %li.dropdown
          = link_to '#', class: 'dropdown-toggle', data: {hover: 'dropdown'} do
            %i.fa.fa-calendar
            Events
            %i.fa.fa-caret-down

          %ul.dropdown-menu
            %li
              = link_to unit_events_path(@unit) do
                Event List

            %li
              = link_to calendar_unit_events_path(@unit) do
                Event Calendar

            - if policy(Event).create?
              %li
                = link_to new_unit_event_path(@unit) do
                  %i.fa.fa-plus
                  New Event


      = form_tag change_default_unit_units_path, method: :get, class: 'navbar-form navbar-right' do
        .form-group
          = select_tag :select_default_unit, options_from_collection_for_select(@units, :id, :name_short), prompt: 'change unit', class: 'form-control'

      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to unit_events_path(@unit), data: {toggle: 'tooltip', placement: 'bottom', delay: {show: 1000}}, title: 'event list' do
            %i.fa.fa-list
        %li
          = link_to calendar_unit_events_path(@unit), data: {toggle: 'tooltip', placement: 'bottom', delay: {show: 1000}}, title: 'event calendar' do
            %i.fa.fa-calendar

