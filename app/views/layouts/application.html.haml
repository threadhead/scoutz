!!! 5
%html(lang="en")
  %head
    = render 'layouts/head'
    = #yield :head

  %body
    #header
      = render 'layouts/header'

    .container-fluid
      .row
        .col-md-2
          = render 'layouts/sidebar'

        .col-md-10
          = yield

    - #cache('application/footer') do
    = render 'layouts/footer'
    = render 'layouts/js'
    = #yield :scripts
