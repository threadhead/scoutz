!!!
%html{style: "font-family: sans-serif;"}
  %head
  %body
    %h2{style: "margin-bottom: 20px;"}= @unit.name
    %table
      %tr
        %th{style: "text-align: left;"} Event
        %th{style: "text-align: left;"} Dates
        %th{style: "text-align: left;"} RSVP
        %th{style: "text-align: left;"} iCal
      - @events.each do |event|
        %tr
        %td= link_to event.name, event_url(event)
        %td #{event.start_at.to_s(:short_ampm)} - #{event.end_at.to_s(:short_ampm)}
        %td= event.signup_required ? "by #{event.signup_deadline.to_s(:short_ampm)}" : ''
        %td= link_to image_tag('ical_email.png'), (URI.parse(root_url) + event.ical.url).to_s, download: "#{event.name.parameterize}.ics"
