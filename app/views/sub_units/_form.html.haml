= form_for @sub_unit do |f|
  -if @sub_unit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sub_unit.errors.count, "error")} prohibited this sub_unit from being saved:"
      %ul
        - @sub_unit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :unit_id
    = f.number_field :unit_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
