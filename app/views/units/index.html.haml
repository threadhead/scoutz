- model_class = Unit.new.class
%h1= t '.title', default: model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:unit_type)
      %th= model_class.human_attribute_name(:unit_number)
      %th= model_class.human_attribute_name(:city)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:time_zone)
      %th= t '.actions', default: t('helpers.actions')
  %tbody
    - @units.each do |unit|
      %tr
        %td= link_to unit.id, unit_path(unit)
        %td= unit.unit_type
        %td= unit.unit_number
        %td= unit.city
        %td= unit.state
        %td= unit.time_zone
        %td
          = link_to t('.edit', default: t('helpers.links.edit')), edit_unit_path(unit), class: 'btn btn-mini'
          = link_to t('.destroy', default: t('helpers.links.destroy')), unit_path(unit), method: :delete, confirm: t('.confirm', default: t('helpers.links.confirm', default: 'Are you sure?')), class: 'btn btn-mini btn-danger'

= link_to t('.new', default: t('helpers.links.new')), new_unit_path, class: 'btn btn-primary'
