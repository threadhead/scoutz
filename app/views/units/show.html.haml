- model_class = @unit.class
%h1= t '.title', default: model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:unit_type) + ':'
  %br
  = @unit.unit_type
%p
  %strong= model_class.human_attribute_name(:unit_number) + ':'
  %br
  = @unit.unit_number
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br
  = @unit.city
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @unit.state
%p
  %strong= model_class.human_attribute_name(:time_zone) + ':'
  %br
  = @unit.time_zone

.form-group
  .col-md-offset-4.col-md-6
    = link_to t('.back', default: t('helpers.links.back')), units_path, class: 'btn btn-default'
    = link_to t('.edit', default: t('helpers.links.edit')), edit_unit_path(@unit), class: 'btn btn-default'
    = link_to t('.destroy', default: t('helpers.links.destroy')), unit_path(@unit), method: :delete, confirm: t('.confirm', default: t('helpers.links.confirm', default: 'Are you sure?')), class: 'btn btn-danger'
