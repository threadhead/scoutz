          %button.btn.btn-default.date-clear{type: 'button'} clear


    -# = f.text_field :part_a_date, value: f.object.part_a_date.try(:to_s, :us_date), label: 'Part A', class: 'date-picker', label_col: 'col-md-4', control_col: 'col-md-6', append: '<i class="fa fa-calendar"></i>'.html_safe

