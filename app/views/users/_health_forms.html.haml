    = f.text_field :philmont_date, value: f.object.philmont_date.try(:to_s, :us_date), label: 'Philmont', class: 'date-picker', label_col: 'col-md-5', control_col: 'col-md-6', append: '<i class="fa fa-calendar"></i>'.html_safe

